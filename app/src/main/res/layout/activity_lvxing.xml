<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
      <ImageView
          android:id="@+id/iv_jban_id"
          android:layout_marginLeft="35dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/back_x"
          android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结伴旅行"
            android:layout_marginLeft="80dp"
            android:textSize="30sp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/iv_write_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/edit_list_item"
            android:layout_marginLeft="85dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_remen_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="热门结伴"
            android:layout_marginLeft="35dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_guanzhu_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="我的关注"
            android:layout_marginLeft="50dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_fa_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="我发布的"
            android:layout_marginLeft="50dp"
            android:textSize="20sp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/id_tab_line_iv_jieban"
        android:layout_width="1dp"
        android:layout_height="1dp"

        android:background="@drawable/guide_round_selector"
        android:contentDescription="tab"></ImageView>
</LinearLayout>
