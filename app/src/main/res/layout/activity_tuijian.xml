<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <WebView
        android:id="@+id/tuijian_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_weixin_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="430dp"
                android:src="@mipmap/share_weixin_icon" />

            <Button
                android:id="@+id/btn_friends_id"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="bottom"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="430dp"
                android:src="@mipmap/share_weixin_friends" />

            <Button
                android:id="@+id/btn_zone_id"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="bottom"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="430dp"
                android:src="@mipmap/share_zone_qq" />

            <Button
                android:id="@+id/btn_qq_id"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="bottom"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="430dp"
                android:src="@mipmap/share_qq_icon" />

        </LinearLayout>

    </WebView>
</LinearLayout>